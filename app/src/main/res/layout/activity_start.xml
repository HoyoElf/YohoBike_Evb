<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ui.StartActivity">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_guide_bgabanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@color/hdb_transparent"
        app:banner_pointDrawable="@drawable/select_start_point"
        app:banner_pointTopBottomMargin="8dp"
        app:banner_transitionEffect="defaultEffect" />

    <Button
        android:id="@+id/yoho_guide_skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@color/hdb_beige"
        android:textColor="@color/hdb_white"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_4"
        android:text="@string/quide_skip" />

</RelativeLayout>